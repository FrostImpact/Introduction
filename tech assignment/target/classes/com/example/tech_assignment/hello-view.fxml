<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="500" prefWidth="400" spacing="15" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tech_assignment.HelloController">

    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="To-Do List App" />

    <HBox alignment="CENTER" prefWidth="350" spacing="10">
        <TextField fx:id="taskInput" promptText="Enter a task..." HBox.hgrow="ALWAYS" />
        <Button fx:id="addButton" text="Add" />
    </HBox>

    <ListView fx:id="taskList" prefHeight="350" prefWidth="350" />

    <Button fx:id="deleteButton" text="Delete" />

    <Button fx:id="editButton" text="Edit" />

    <Button fx:id="doneButton" text="Mark as Done/Incomplete" />

    <Label fx:id="taskCountLabel" style="-fx-text-fill: gray;" text="0 tasks remaining" />

</VBox>
